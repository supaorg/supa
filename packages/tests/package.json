{
  "name": "@sila/tests",
  "private": true,
  "version": "1.0.0",
  "description": "Vitest suite for Sila core components",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:node": "vitest run --config vitest.config.ts",
    "test:browser": "vitest run --config vitest.config.browser.ts",
    "test:svelte": "vitest run --config vitest.config.svelte.ts",
    "test:spaces": "vitest run src/spaces/spaces-*.test.ts",
    "test:files": "vitest run src/files/files-*.test.ts",
    "test:chat": "vitest run src/chat/chat-*.test.ts",
    "test:previews": "vitest run src/previews/previews-*.test.ts",
    "test:ai": "vitest run src/ai/ai-*.test.ts",
    "test:simplified-previews": "vitest run src/previews/previews-*.test.ts",
    "test:simplified-previews:node": "vitest run --config vitest.config.ts src/previews/previews-core.test.ts",
    "test:simplified-previews:svelte": "vitest run --config vitest.config.svelte.ts src/previews/previews-svelte.test.ts"
  },
  "dependencies": {
    "@sila/core": "*",
    "@sila/client": "*"
  },
  "devDependencies": {
    "vitest": "^2.1.1",
    "typescript": "^5.4.0",
    "@types/node": "^20.12.7",
    "tsx": "^4.0.0",
    "happy-dom": "^14.10.1",
    "jsdom": "^24.0.0",
    "@testing-library/svelte": "^4.0.0"
  }
}